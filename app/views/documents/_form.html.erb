<%= tinymce_assets %>
<%= semantic_form_for @document do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs do %>
    <%= f.input :name, :label =>"File name" %>
    <%= f.input :file_date %>
    <%= f.input :client %>
<%= f.text_area :body_text,  :label => "Document content", :class => "tinymce" %>

<%= f.input :footer,  :label => "Footer", :class => " footer", :input_html =>{:value =>"1 All details to be finalized with the client: Briefing each Monday, De-briefing each Friday.
  2 All prices are listed in EUR, inclusive of all taxes, except the international bank transfer costs, to be undertaken by the client, as per their bank's requirement." }%>

<%= tinymce %>
<%= f.input :show_pdf_type, :input_html=>{:value=>params[:type]} %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
  <% end %>
<% end %>

